{
  "name": "javadebugger",
  "displayName": "Java Debugger",
  "description": "Java Debugger (break points, variables, stack trace etc)",
  "version": "0.0.3",
  "publisher": "donjayamanne",
  "engines": {
    "vscode": "^0.10.8"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [],
  "license": "MIT",
  "homepage": "https://github.com/DonJayamanne/javaVSCode/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/DonJayamanne/javaVSCode"
  },
  "bugs": {
    "url": "https://github.com/DonJayamanne/javaVSCode/issues"
  },
  "icon": "images/icon.png",
  "main": "./out/src/client/extension",
  "contributes": {
    "debuggers": [
      {
        "type": "java",
        "label": "Java",
        "enableBreakpointsFor": {
          "languageIds": [
            "java"
          ]
        },
        "program": "./out/src/client/main.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "jdkPath",
              "cwd",
              "startupClass"
            ],
            "properties": {
              "cwd": {
                "type": "string",
                "description": "Current working directory (defaults to the directory where the current file is located).",
                "default": "${fileDirname}"
              },
              "startupClass": {
                "type": "string",
                "description": "startup class (this will deault to the current file name)",
                "default": "${fileBasename}"
              },
              "jdkPath": {
                "type": "string",
                "description": "Path JDK directory.",
                "default": ""
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              },
              "externalConsole": {
                "type": "boolean",
                "description": "Launch debug target in external console window.",
                "default": false
              },
              "sourcePath":{
                "type": "array",
                "items": {
                  "type": "string"
                },
                "default": [],
                "description": "SourcePath to search source"
              },
              "options": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "default": [],
                "description": "Options to be passed to the java executable (java)."
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "name": "Java",
            "type": "java",
            "request": "launch",
            "stopOnEntry": true,
            "cwd": "${fileDirname}",
            "startupClass": "${fileBasename}",
            "options": [
              "-classpath",
              "\"${fileDirname};.\""
            ]
          },
          {
            "name": "Java Console App",
            "type": "java",
            "request": "launch",
            "stopOnEntry": true,
            "cwd": "${fileDirname}",
            "startupClass": "${fileBasename}",
            "options": [
              "-classpath",
              "\"${fileDirname};.\""
            ],
            "externalConsole": true
          }
        ]
      }
    ]
  },
  "scripts": {
    "prepublish": "node ./node_modules/typescript/bin/tsc -p .",
		"compile": "node ./node_modules/typescript/bin/tsc -p .",
		"watch": "node ./node_modules/typescript/bin/tsc -w -p .",
		"postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
		"@types/node": "^6.0.50",
		"typescript": "^2.0.10",
		"mocha": "^3.1.2",
		"vscode": "^1.0.3",
		"vscode-debugadapter-testsupport": "^1.15.0"
  },
  "dependencies": {
    "get-port": "^2.1.0",
    "line-by-line": "^0.1.4",
    "named-js-regexp": "^1.3.1",
    "vscode-debugprotocol": "^1.15.0",
		"vscode-debugadapter": "^1.15.0"
  }
}